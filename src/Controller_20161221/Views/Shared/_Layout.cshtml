<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControllerApp</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/jquery-mobile/css/themes/default/jquery.mobile.css" />
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.1/jquery.mobile-1.2.1.min.css" />
        <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
        <script src="http://code.jquery.com/mobile/1.2.1/jquery.mobile-1.2.1.min.js"></script>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/jQuery.mmenu/dist/css/jquery.mmenu.all.css" type="text/css" />
        <link rel="stylesheet" href="~/lib/css-hamburgers/dist/hamburgers.min.css" type="text/css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/smoothness/jquery-ui.min.css" type="text/css" />
        <link href="~/lib/jquery-ui/themes/smoothness/jquery-ui.min.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/jtable/lib/themes/metro/darkgray/jtable.min.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/jQuery.mmenu/dist/extensions/themes/jquery.mmenu.themes.css" rel="stylesheet" type="text/css" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jQuery.mmenu/dist/js/jquery.mmenu.all.min.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
        <script src="~/lib/jtable/lib/jquery.jtable.js" type="text/javascript"></script>
        <script src="~/lib/jquery-mobile/js/jquery.mobile.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="my-page">
        <div class="ui-grid-a ui-responsive">
            <div class="ui-block-a" style="width:5%">
                <a href="#" id="hamburger">
                    <div id="menu" class="hamburger hamburger--collapse">
                        <div class="hamburger-box">
                            <div class="hamburger-inner"></div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="ui-block-b" style="width:95%">
                <button data-theme="a"> New Insurance Style Main Menü</button>
                @RenderBody()
            </div>
        </div>
        <div id="my-footer">
            <p>CopyRight INSURER, 2016</p>
        </div>
    </div>
</body>
</html>


